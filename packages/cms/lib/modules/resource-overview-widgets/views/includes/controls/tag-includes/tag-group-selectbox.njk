<div id="tag-group-container-{{ 'tags' if key === 'undefined' else key }}" class="tag-group-container">
    <div class="resource-overview-tag-select-group">
        {% if data.widget.tagType and data.widget.alternativeSingleTagTypeLabel %}
            <p class="{{ tagGroupPrefix }}tag-group-title default-select">{{ data.widget.alternativeSingleTagTypeLabel if data.widget.alternativeSingleTagTypeLabel else key }}</p>
        {% else %}
            <p class="{{ tagGroupPrefix }}tag-group-title default-select">{{ "Tags" if not key else key }}</p>
        {% endif %}
        <div id="{{ tagGroupPrefix }}tag-group-{{ 'tags' if key === 'undefined' else key }}" class="{{ tagGroupPrefix }}tag-group columned }}">
            {% include 'includes/controls/tag-includes/tag-checkboxes.njk' %}
        </div>
    </div>
</div>